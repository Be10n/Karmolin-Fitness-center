<Page x:Class="Karmolin_Fitness_Center_.Pages.SalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Karmolin_Fitness_Center_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalePage">

    <Grid>
        <DataGrid Name="DgridSale" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding IdCard}" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding IdUser}" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding IdSubscription}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding StartDate}" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
